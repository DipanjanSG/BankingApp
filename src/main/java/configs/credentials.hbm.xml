<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Login.Credentials" table = "credentials">
   
      <meta attribute = "class-description">
         This class contains the account-holders net-banking credentials. 
      </meta>
      <cache usage = "read-only"/>
      
      <id name = "customerId" type = "int" column = "customerId">
                 <generator class="increment">
                 		 <param name="property">customerBean</param>
                 </generator>
      </id>      
      <one-to-one name="customerBean" class="CreateAccount.Customer" constrained="true"/>
      <property name = "password" column = "password" type = "string"/>
      <property name = "userName" type = "string" column = "username"/>  
   </class>
</hibernate-mapping>